# 빌드 스테이지
FROM python:3.11-slim as builder

WORKDIR /app

# 의존성 설치
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 소스 복사 및 정리
COPY . .
RUN find . -name "scripts" -type d -exec rm -rf {} + || true
RUN find . -name "test_*.py" -delete || true
RUN find . -name "__pycache__" -type d -exec rm -rf {} + || true

# 운영 스테이지
FROM python:3.11-slim as production

# 시간대 설정
RUN apt-get update && apt-get install -y tzdata && \
    ln -sf /usr/share/zoneinfo/Asia/Seoul /etc/localtime && \
    echo "Asia/Seoul" > /etc/timezone && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# 빌드 스테이지에서 정리된 파일만 복사
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /app/aiagent ./aiagent

# 환경 변수
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
ENV TZ=Asia/Seoul
ENV LOG_LEVEL=INFO

EXPOSE 5000

CMD ["python", "-m", "aiagent.main"] 